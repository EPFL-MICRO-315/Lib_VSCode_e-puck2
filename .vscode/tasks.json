{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Project e-puck2_main-processor: Make",
            "type": "shell",
            "command": "${config:make_path} -j",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/e-puck2_main-processor/"
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
        {
            "label": "Project e-puck2_main-processor: Clean",
            "type": "shell",
            "command": "${config:make_path} clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/e-puck2_main-processor/"
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
        {
            "label": "Project ST: Make",
            "type": "shell",
            "command": "${config:make_path} -j",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/ST/",
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
        {
            "label": "Project ST: Clean",
            "type": "shell",
            "command": "${config:make_path} clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/ST/",
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
        {
            "label": "Tools: Check Programmer SerialMonitor redirection",
            "type": "shell",
            "command": "python3 MonitorTools.py ${config:com_port}",
            "windows": {
                "command": "python3 MonitorTools.py '\\${config:com_port}'",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools/",
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
            "presentation": {
                "echo": false,
            }
        },
        {
            "label": "Tools: Update ESP32 firmware",
            "type": "shell",
            "command": "python3 UpdateESP32Firmware.py ${config:com_port} ${config:serial_monitor}"
            ,
            "windows": {
                "command": "python3 UpdateESP32Firmware.py '\\${config:com_port}' '\\${config:serial_monitor}'",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools/",
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
        {
            "label": "Tools: Power ON",
            "type": "shell",
            "command": "python3 UpdateESP32Firmware.py ${config:com_port} ${config:serial_monitor}"
            ,
            "windows": {
                "command": "python3 UpdateESP32Firmware.py '\\${config:com_port}' '\\${config:serial_monitor}'",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools/",
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
        {
            "label": "Tools:Programmer: 1. Temporary SerialMonitor -> ESP32_230000",
            "type": "shell",
            "command": "python3 MonitorTools.py ${config:com_port} '2' 'True'",
            "windows": {
                "command": "python3 MonitorTools.py '\\${config:com_port}' '2' 'True'",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools/",
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
        {
            "label": "Tools:Programmer: 2. Only Update ESP32 firmware",
            "type": "shell",
            "command": "python3 UpdateESP32Firmware.py ${config:com_port} ${config:serial_monitor} ONLY_UPDATE"
            ,
            "windows": {
                "command": "python3 UpdateESP32Firmware.py '\\${config:com_port}' '\\${config:serial_monitor}' ONLY_UPDATE",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools/",
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
        {
            "label": "Tools:Programmer: 3. Force SerialMonitor -> F407",
            "type": "shell",
            "command": "python3 MonitorTools.py ${config:com_port} '1'",
            "windows": {
                "command": "python3 MonitorTools.py '\\${config:com_port}' '1'",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools/",
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
        {
            "label": "Tools: Check Programmer Firmware ",
            "type": "shell",
            "command": "arm-none-eabi-gdb -q -ex 'target extended-remote ${config:com_port}' -ex 'mon ver' -ex 'quit'",
            "windows": {
                "command": "arm-none-eabi-gdb -q -ex 'target extended-remote ${config:com_port}' -ex 'mon ver' -ex 'quit'",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools/",
                "windows": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/C"]
                    }
                }
            },
        },
    ]
}