{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make e-puck2_main-processor",
            "type": "shell",
            "command": "${config:make_path} -j",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/e-puck2_main-processor/"
            }
        },
        {
            "label": "Clean e-puck2_main-processor",
            "type": "shell",
            "command": "${config:make_path} clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/e-puck2_main-processor/"
            }
        },
        {
            "label": "Make ST",
            "type": "shell",
            "command": "${config:make_path} -j",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/ST/"
            }
        },
        {
            "label": "Clean ST",
            "type": "shell",
            "command": "${config:make_path} clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/ST/"
            }
        },
        {
            "label": "Link Librairy e-puck2_main-processor to workspace",
            "type": "shell",
            "command": "pwd; ls; if [ -d \"e-puck2_main-processor\" ]; then echo -n -e '\\033[0;91m'Link e-puck2_main-processor already present !; echo '\\033[0m'; echo ; else ln -s ${config:workplace}/Lib/e-puck2_main-processor . ; fi",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Link Librairy ST to Project folder",
            "type": "shell",
            "command": "pwd; ls; if [ -d \"ST\" ]; then echo -n -e '\\033[0;91m'Link ST already present !; echo '\\033[0m'; echo ; else ln -s ${config:workplace}/Lib/ST . ; fi",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}