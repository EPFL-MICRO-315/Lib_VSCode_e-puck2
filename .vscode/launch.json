{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BMP launch",
            "cwd": "${workspaceRoot}/build",
            "executable": "${workspaceRoot}/build/EMorpuck.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "stopAtEntry": false,
            "device": "STM32F407",
            "BMPGDBSerialPort" : "${config:com_port}",
            "runToMain": true,
            "svdFile": "${config:epuck2_utils}/STM32F407.svd",
            "preLaunchCommands":[
                "set mem inaccessible-by-default off",
            ]
        },
        {
            "name": "BMP attach",
            "cwd": "${workspaceRoot}/build",
            "executable": "${workspaceRoot}/build/EMorpuck.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "STM32F407",
            "BMPGDBSerialPort" : "${config:com_port}",
            "runToMain": true,
            "svdFile": "${config:epuck2_utils}/STM32F407.svd",
            "preLaunchCommands":[
                "set async-remote false",
                "set remote-timeout 20"
            ],
            "preRestartCommands": [
                "enable breakpoint",
                "break main"
            ]
        }
    ]
}